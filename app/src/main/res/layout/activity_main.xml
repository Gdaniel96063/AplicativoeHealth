<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="#EAEAEA"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="Inicio Administrador"
                    android:textColor="#145EE2"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/buttonRegistroPaciente"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/medical_healthcare_hospital" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Registro de Pacientes"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#145EE2" />

            <ImageButton
                android:id="@+id/buttonListadoPaciente"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/healthcare_medical_hospital" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Listado de Pacientes"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#145EE2" />

            <ImageButton
                android:id="@+id/buttonRegistroPersonalMedico"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/surgeon_avatar_medical_doctor_mask" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Registro de Personal Medico"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#145EE2" />

            <ImageButton
                android:id="@+id/buttonListadoPersonalMedico"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/healthcare_medical_hospital" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Listado de Personal Medico"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#145EE2" />

            <ImageButton
                android:id="@+id/buttonListadoCitasMedicas"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/healthcare_medical_hospital_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Listado Citas MÃ©dicas"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#145EE2" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>